<h1>Editing Book</h1>
 <%= form_with model:@book,url: book_path(@book.id),method: :patch do |f| %>
 
 <% if @book.errors.any? %>
  <div class= "error">
   <div class= "error-text"><%= @book.errors.count %> errors prohibited this book from being saved:  </div>
  <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
  </ul>
  </div>
<% end %>
 


<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", "/books/#{@book.id}" %>  | <%= link_to "Back", "/books" %>